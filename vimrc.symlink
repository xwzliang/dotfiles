" load plugins
if filereadable(expand("~/.vimrc.bundles"))
  source ~/.vimrc.bundles
endif

filetype plugin indent on
" To ignore plugin indent changes, instead use:
filetype plugin on

" Settings vim editing
syntax on
set tabstop=4
set shiftwidth=4
imap <tab> <C-p>

"vim-closetag
let g:closetag_filenames = '*.html,*.xhtml,*.phtml'
